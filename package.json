{
	"name": "appc.arrowdb",
	"description": "ArrowDB connector",
	"version": "1.3.0",
	"author": "Jeff Haynie",
	"maintainers": [
		"Jeff Haynie <jhaynie@appcelerator.com>",
		"Dawson Toth <dtoth@appcelerator.com>"
	],
	"license": "Apache-2.0",
	"framework": "none",
	"keywords": [
		"appcelerator",
		"arrow",
		"arrow-connector"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/appcelerator/appc.arrowdb"
	},
	"scripts": {
		"start": "appc run",
		"lint": "standard --fix",
		"security": "retire --exitwith 0 --outputpath scan-retire.txt && nsp check --output writefile --warn-only",
		"clean": "rimraf ./tmp",
		"test": "npm run security && npm run test:unit && npm run clean",
		"test:coverage": "nyc check-coverage --lines 0--functions 0 --branches 0--statements 0",
		"test:unit": "tap ./test/unit/* --color --bail --coverage --coverage-report=html && npm run test:coverage",
		"test:integration": "grunt"
	},
	"private": true,
	"dependencies": {
		"arrowdb": "1.0.11",
		"async": "^0.9.0",
		"lodash": "^3.10.1",
		"lru-cache": "^2.6.5",
		"semver": "^5.0.3"
	},
	"devDependencies": {
		"arrow": "^*",
		"grunt": "^0.4.5",
		"grunt-mocha-test": "^0.13.2",
		"istanbul": "^0.4.1",
		"js-yaml": "^3.2.5",
		"mocha": "^2.3.4",
		"request": "^2.66.0",
		"should": "^4.5.1",
		"sinon": "^2.1.0",
		"tap": "^10.3.0",
		"rimraf": "^2.6.1",
		"nsp": "^2.6.3",
		"nyc": "^10.2.0",
		"retire": "^1.3.1"
	},
	"standard": {
		"ignore": [
			"test/integration/**"
		]
	}
}
